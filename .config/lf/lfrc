# Functions

# Create directories command
cmd mkdir ${{
  printf "Directory Name: " read ans
  read ans
  mkdir $ans
}}

# Create file command
cmd mkfile ${{
  printf "File Name: "
  read ans
  nvim $ans
}}

# Mount Phone command
cmd phone-mount ${{
  gio mount -li | awk -F= '{if(index($2,"mtp") == 1)system("gio mount "$2)}'
}}

# Archive binding
cmd unarchive ${{
  unp $f 
}}

# Set config options
set relativenumber true

# Bindings
	
# Unmap bindings
map <f-1>
map t
map w
map d
map m
map u

# Navigation shortcuts
map <esc> :quit
map <enter> open
map <backspace2> updir
map . set hidden!

# Selection shortcuts
map c :clear ; unselect
map v :toggle; down
map V invert

# File management shortcuts
map d delete
map x cut
map md mkdir
map mf mkfile
map au unarchive
map <f-2> rename

# Directory shortcuts
map sd cd /run/media/
map sp cd /run/user/1000/gvfs
map gd cd ~/Downloads
map gp cd ~/Pictures/
map gc cd ~/.config/
map gs cd ~/Sync/
map gm cd ~/Music/
map gl  cd ~/.local/
map gb cd ~/.local/bin/
map gy cd ~/Downloads/Youtube/
