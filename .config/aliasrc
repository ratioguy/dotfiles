# My alias

alias q="exit"
alias sudo="doas"
alias sudoedit='doas nvim --clean'
alias vi="nvim"
alias vim="nvim"
alias ll="ls -lah"
alias cd="z"
alias ..="z .."
alias ls="ls --color"
alias bg="xwallpaper --zoom ~/Pictures/wallpapers/White-Mountain.jpg"
alias yt-launcher="sh ~/.local/bin/youtube-launcher.sh ; exit"
alias yt-downloader="yt-dlp -P ~/Downloads/Youtube/ --merge-output-format mp4 -f 'bestvideo[height<=?720]+bestaudio/best' --sponsorblock-remove sponsor,intro,outro,interaction,selfpromo,preview --exec 'setsid -f mpv --no-terminal $link'"
alias music-downloader="sh ~/.local/bin/music-downloader.sh"
alias playlist-gen="sh ~/.local/bin/playlist-gen.sh"
alias bc="bc -l -q"
alias git-uncommited="git status --short"
alias git-reset="git reset --hard origin/main"
alias startx="dbus-run-session startx"
alias !!="fc -s"
alias grep="rg"
