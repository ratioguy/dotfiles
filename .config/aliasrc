# My aliases

# Doas aliases
alias doasedit='doas nvim --clean'

# Neovim aliases
alias vim="nvim"
alias ll="ls -lah"
alias ls="ls --color"

# Background alias
alias bg="xwallpaper --zoom ~/Pictures/wallpapers/White-Mountain.jpg"

# Bc alias
alias bc="bc -l -q"

# Startx as dbus-session
alias startx="dbus-run-session startx"

# rerun last command
alias !!="fc -s"
